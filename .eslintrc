{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "globalReturn": true,
      "jsx": true
    }
  },

  "plugins": [
    "meteor",
    "react"
  ],
  "extends": [
    "airbnb",
    "plugin:meteor/recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "arrow-body-style": [1, "as-needed"],
    "no-underscore-dangle": 0,
    "react/prop-types": 0,
    "react/jsx-filename-extension": 0,
    "import/extensions": 0,
    "import/no-unresolved": ["error", { ignore: ['^react$', 'mantra-core', '@panter/manul-i18n'] }],
    "jsx-a11y/no-static-element-interactions": 0
  }
}
